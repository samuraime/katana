{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup": "yarn install && cd frontend && yarn install",
    "dev": "concurrently 'npm run client' 'npm run server'",
    "server": "NODE_ENV=development PORT=8000 nodemon -r dotenv/config --ignore frontend/",
    "client": "cd frontend && npm run start",
    "build": "cd frontend && PUBLIC_URL=https://cdn.samuraime.com/suzaku npm run build",
    "cdn": "QUPLOAD_DOMAIN=https://cdn.samuraime.com qupload -p suzaku/ -r --use-path ./frontend/build",
    "deploy": "npm run build && npm run cdn",
    "start:pm2": "pm2 start process.production.json",
    "start": "node index.js",
    "test": "jest"
  },
  "author": "SamuraiMe",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "dotenv": "^8.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.17.2",
    "jest": "^24.7.1",
    "nodemon": "^1.11.0",
    "qupload": "^0.4.1"
  },
  "dependencies": {
    "jsonwebtoken": "^8.1.0",
    "kcors": "^2.2.1",
    "koa": "^2.2.0",
    "koa-body": "^2.3.0",
    "koa-helmet": "^3.2.0",
    "koa-jwt": "^3.2.2",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.2.0",
    "koa-session": "^5.12.0",
    "koa-static": "^4.0.1",
    "mongoose": "^4.10.6",
    "node-fetch": "^2.6.0",
    "qiniu": "^7.1.0",
    "winston": "^2.3.1"
  },
  "repository": "git@github.com:samuraime/katana.git"
}
